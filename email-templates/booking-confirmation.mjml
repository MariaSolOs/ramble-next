                        <mj-image 
                        src="https://res.cloudinary.com/dxod7etqu/image/upload/c_scale,w_40/v1597854853/Ramble/Emails/users-icon.png" 
                        alt="Guests"
                        width="25px"
                        padding="0"/>
                    </mj-column>
                    <mj-column>
                        <mj-text
                        padding="0"
                        font-size="19px"
                        letter-spacing="-0.9px"
                        color="#CCCCCE">
                            {{numGuests}} Invit√©(s)
                        </mj-text>
                    </mj-column>
                </mj-group>
            </mj-section>

            <!-- Host details -->
            <mj-section
            padding="0">
                <mj-column>
                    <mj-text
                    mj-class="grey-title"
                    padding-left="0">
                        Votre h√¥te 
                    </mj-text>
                </mj-column>
            </mj-section>
            <mj-section
            padding="0 0 10px 10px">
                <mj-group>
                    <mj-column
                    width="10%">
                        <mj-image 
                        src="{{hostPicture}}" 
                        alt="Experience host"
                        border-radius="100%"
                        width="40px"
                        padding="0"/>
                    </mj-column>
                    <mj-column>
                        <mj-text
                        mj-class="grey-title"
                        font-size="18px"
                        padding-left="10px"
                        vertical-align="middle">
                            {{hostName}}
                        </mj-text>
                    </mj-column>
                    <mj-column 
                    width="35px"
                    vertical-align="middle">
                        <mj-image 
                        src="https://res.cloudinary.com/dxod7etqu/image/upload/c_scale,w_40/v1597856973/Ramble/Emails/phone-icon.png" 
                        alt="Creator's phone number"
                        width="20px"
                        padding="10px 15px 0 0"/>
                    </mj-column>
                    <mj-column
                    padding="12px 0 0">
                        <mj-text
                        color="#FFF"
                        font-size="16px"
                        padding="0">
                            {{hostPhone}}
                        </mj-text>
                    </mj-column>
                </mj-group>
            </mj-section>

            <!-- To bring -->
            {{#if toBringItems}}
