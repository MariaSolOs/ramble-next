                                &bull; {{this}}
                            </mj-text>
                        {{/each}}
                    </mj-column>
                </mj-section>
            {{/if}}

            <!-- Meeting spot -->
            {{#if meetingPoint}}
                <mj-section
                padding="20px 0 10px">
                    <mj-column>
                        <mj-text
                        mj-class="grey-title"
                        padding="0">
                            Point de rencontre
                        </mj-text>
                    </mj-column>
                </mj-section>
                <mj-section
                padding="0">
                    <mj-group>
                        <mj-column
                        padding="0 0 0 5px"
                        width="50px">
                            <mj-image 
                            src="https://res.cloudinary.com/dxod7etqu/image/upload/c_scale,w_40/v1597860653/Ramble/Emails/map-marker-icon.png" 
                            alt="Experience meet point"
                            width="20px"
                            padding="0"/>
                        </mj-column>
                        <mj-column
                        width="80%">
                            <mj-text
                            mj-class="grey-title"
                            font-size="16px"
                            padding="5px 10px">
                                {{meetingPoint}}
                            </mj-text>
                        </mj-column>
                    </mj-group>
                </mj-section>
            {{/if}}

            <!-- Zoom info -->
            {{#if zoomPMI}}
                <mj-section
                padding-bottom="0">
                    <mj-column>
                        <mj-text
                        mj-class="grey-title"
                        padding-left="0">
                            ID de r√©union ZOOM
                        </mj-text>
                    </mj-column>
                    <mj-column>
                        <mj-text
                        mj-class="grey-title"
                        font-size="16px"
                        padding-left="0">
                            <a
                            href="{{zoomPMI}}"
                            target="_blank">
                                {{zoomPMI}}
                            </a>
                        </mj-text>
                    </mj-column>
                </mj-section>
                <mj-section
                padding-top="0">
                    <mj-column>
                        <mj-text
                        mj-class="grey-title"
                        padding-left="0">
